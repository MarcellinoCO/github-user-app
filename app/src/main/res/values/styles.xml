<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.List" parent="AppTheme">
        <item name="actionOverflowButtonStyle">@style/AppTheme.AppBarOverflow</item>
    </style>

    <style name="AppTheme.AppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.AppBarOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat.Headline" />

    <style name="AppTheme.Text.ExtraLarge" parent="AppTheme.Text">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.Text.Large" parent="AppTheme.Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="AppTheme.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.Small" parent="AppTheme.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
